<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camping</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= area.imagem %>" alt="<%= area.nome %>">
                <div class="caption-full">
                    <h4 class="pull-right">R$9,00/noite</h4>
                    <h4><a href="#"><%= area.nome %></a></h4>
                    <p><em>Enviado por: <%= area.autor.usuario %></em></p>
                    <% if(usuario && area.autor.id.equals(usuario._id)) { %>
                        <form action="/areas-de-camping/<%= area._id %>?_method=DELETE" method="post">
                            <a class="btn btn-xs btn-warning" href="/areas-de-camping/<%= area._id %>/edit">Editar</a>
                            <button class="btn btn-xs btn-danger" type="submit" >Excluir</button>
                        </form>
                    <% } %>
                    <hr>
                    <p><%= area.descricao %></p>
                </div>
            </div>

            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/areas-de-camping/<%= area._id %>/comentarios/new">Adicionar Comentário</a>
                </div>
                <hr>
                <% area.comentarios.forEach(function(comentario) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comentario.autor.usuario %></strong>
                            <span class="pull-right">10 dias atrás</span>
                            <p>
                                <%= comentario.texto %>
                            </p>
                            <% if(usuario && comentario.autor.id.equals(usuario._id)) { %>
                                <form action="/areas-de-camping/<%= area._id %>/comentarios/<%= comentario._id %>?_method=DELETE" method="post">
                                    <a class="btn btn-xs btn-warning" href="/areas-de-camping/<%= area._id %>/comentarios/<%= comentario._id %>/edit">Editar</a>
                                    <button class="btn btn-xs btn-danger" type="submit">Excluir</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>

            </div>

        </div>
    </div>
</div>

<% include ../partials/footer %>
